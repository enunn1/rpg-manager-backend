generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String           @id @default(uuid())  
  displayName   String
  email         String           @unique
  passwordHash  String
  campaigns     Campaign[]       @relation("CreatedCampaigns")
  characters    Character[]
  memberships   CampaignMember[]
}

model Campaign {
  id              String          @id @default(uuid())
  name            String
  description     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  createdByUserId String
  createdBy       User            @relation("CreatedCampaigns", fields: [createdByUserId], references: [id])
  sessions        Session[]
  npcs            NPC[]
  characters      Character[]
  encounters      Encounter[]
  members         CampaignMember[]
}

model CampaignMember {
  id         String    @id @default(uuid())
  role       CampaignRole
  userId     String
  campaignId String
  user       User      @relation(fields: [userId], references: [id])
  campaign   Campaign  @relation(fields: [campaignId], references: [id])
}

enum CampaignRole {
  DM
  PLAYER
}

model Session {
  id         String    @id @default(uuid())
  date       DateTime
  notes      String
  campaignId String
  campaign   Campaign  @relation(fields: [campaignId], references: [id])
}

model Character {
  id            String    @id @default(uuid())
  name          String
  class         String
  level         Int
  stats         Json
  playerUserId  String
  campaignId    String
  player        User      @relation(fields: [playerUserId], references: [id])
  campaign      Campaign  @relation(fields: [campaignId], references: [id])
}

model NPC {
  id          String    @id @default(uuid())
  name        String
  role        String
  description String
  campaignId  String
  campaign    Campaign  @relation(fields: [campaignId], references: [id])
}

model Monster {
  id         String    @id @default(uuid())
  name       String
  statBlock  Json
  source     String
  encounters EncounterMonster[]
}

model Encounter {
  id         String    @id @default(uuid())
  name       String
  campaignId String
  campaign   Campaign           @relation(fields: [campaignId], references: [id])
  monsters   EncounterMonster[]
}

model EncounterMonster {
  id          String    @id @default(uuid())
  encounterId String
  monsterId   String
  count       String
  encounter   Encounter @relation(fields: [encounterId], references: [id])
  monster     Monster   @relation(fields: [monsterId], references: [id])
}